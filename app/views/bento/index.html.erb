<h1>Bento</h1>
<table border='2'>
	<tr>
		<td>bento id</td>
		<td>item name</td>
		<td>price</td>
		<td>bentoshop_id</td>
		<% if @username=="admin" %>
			<td>edit / delete</td>
		<% end %>
	</tr>
	<% @bentos.each do |t| %>
		<tr>
			<td><%= t.id %></td>
			<td><%= t.item_name %></td>
			<td><%= t.price %></td>
			<td><%= t.bentoshop_id %></td>
			<% if @username=="admin" %>
				<td><%= link_to 'edit' , :action => 'modify', :id => t.id %> / <%= link_to 'delete' , :action => 'delete', :id => t.id %></td>
			<% end %>
		</tr>
	<% end %>
</table>
<% if @username=="admin" %>
	<p><%= link_to 'Create new bento item', 'bento/newbento' %></p>
<% end %>
<p><%= link_to 'Back', 'admin' %></p>