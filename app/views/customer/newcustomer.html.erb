<h1>Add a new customer</h1>
<%= form_for @customer, :url => {:controller => "customer", :action => "create"} do |f| %>
<div class="field">
	<%= f.label :cname %>
	<br>
	<%= f.text_field :cname %>
</div>
<div class="field">
	<%= f.label :account %>
	<br>
	<%= f.text_field :account %>
</div>
<div class="field">
	<%= f.label :password %>
	<br>
	<%= f.text_field :password %>
</div>
<div class="field">
	<%= f.label :city %>
	<br>
	<%= f.text_field :city %>
</div>
<div class="field">
	<%= f.label :address %>
	<br>
	<%= f.text_field :address %>
</div>
<div class="field">
	<%= f.label :phone %>
	<br>
	<%= f.text_field :phone %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
<p><%= link_to 'Back', '/customer'  %></p>