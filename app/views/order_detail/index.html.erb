<h1>Order Detail</h1>
<table border='2'>
	<tr>
		<td>Order id</td>
		<td>Item id</td>
		<td>Number</td>
		<td>edit / delete</td>
	</tr>
	<% @details.each do |t| %>
		<tr>
			<td><%= t.order_id %></td>
			<td><%= t.item_id %></td>
			<td><%= t.num %></td>
			<td><%= link_to 'edit' , :action => 'modify', :id => t.id %> / <%= link_to 'delete' , :action => 'delete', :id => t.id %></td>
		</tr>
	<% end %>
</table>
<p><%= link_to 'Create new order detail', 'order_detail/newdetail' %></p>
<p><%= link_to 'Back', 'admin' %></p>