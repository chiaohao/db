<h1>All Bento Order</h1>
<table border='2'>
	<tr>
		<td>orderDate</td>
		<td>totalPrice</td>
		<td>customer_id</td>
		<td>payWay_id</td>
		<td>deliverTime_id</td>
		<td>edit / delete</td>
	</tr>
	<% @bentoOrders.each do |t| %>
		<tr>
			<td><%= t.orderDate %></td>
			<td><%= t.totalPrice %></td>
			<td><%= t.customer_id %></td>
			<td><%= t.payWay_id %></td>
			<td><%= t.deliverTime_id %></td>
			<td><%= link_to 'edit' , :action => 'modify', :id => t.id %> / <%= link_to 'delete' , :action => 'delete', :id => t.id %></td>
		</tr>
	<% end %>
</table>
<p><%= link_to 'Create new bento order', 'bento_order/newbento_order' %></p>